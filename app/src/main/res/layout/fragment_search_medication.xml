<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Medication"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <!-- Radio Buttons for DIN/Name -->
    <RadioGroup
        android:id="@+id/search_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="16dp">

        <RadioButton
            android:id="@+id/radio_search_by_din"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIN"
            android:checked="true" /> <!-- Set DIN as default -->

        <RadioButton
            android:id="@+id/radio_search_by_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />
    </RadioGroup>

    <!-- TextField for DIN/Name input -->
    <EditText
        android:id="@+id/search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter DIN or Name" />

    <!-- Search Button -->
    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp" />

    <!-- Scrollable area for results -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <!-- This LinearLayout will hold the dynamically added cards -->
        <LinearLayout
            android:id="@+id/results_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </ScrollView>

</LinearLayout>