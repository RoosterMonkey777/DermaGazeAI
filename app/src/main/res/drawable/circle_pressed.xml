<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Circle Background -->
<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
        <solid android:color="#EEEEEE" />
        <stroke
            android:width="2dp"
            android:color="#000000" /> <!-- Black outline -->
        <size
            android:width="40dp"
        android:height="40dp"/> <!-- Match the ImageButton size -->
    </shape>

</item>

<!-- Centered Icon -->
<item
    android:drawable="@drawable/baseline_menu_24"
    android:gravity="center"/>
</layer-list>